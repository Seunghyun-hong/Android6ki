<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thunder.myapplication.AdministerActivity">

<LinearLayout
    android:padding="80dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <Button
        android:onClick="crmOnClicked"
        android:id="@+id/crm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고객관리"
        />

    <Button
        android:onClick="smOnclicked"
        android:layout_marginTop="24dp"
        android:id="@+id/salesManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매출관리" />

    <Button
        android:layout_marginTop="24dp"
        android:onClick="mcOnClicked"
        android:id="@+id/merchandiseControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품관리"
        />

</LinearLayout>


</LinearLayout>
